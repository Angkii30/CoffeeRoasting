                <button>สุดท้าย</button>
            </div> -->

      </section>
    </main>
    <script src="/JS/user.js"></script>
    <script src="../JS/login.js"></script>

  </div>
  
  <script>
    const params = new URLSearchParams(window.location.search);

    if (params.get("success") === "1") {
        alert("✅ บันทึกการแก้ไขเรียบร้อยแล้ว");
