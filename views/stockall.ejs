        <li onclick="window.location.href='/user'">จัดการสิทธิ์</li>
      </ul>
    </aside>

    <!-- Main -->
    <div class="main">

      <!-- Topbar -->
      <div class="topbar">
        <div class="user-icon"></div>
      </div>
      <h1 class="page-title">คลังเมล็ดกาแฟ</h1>

      <!-- Content -->
      <div class="content">
        <div class="card-grid">

          <div class="stock-card" onclick="window.location.href='/stock'">
